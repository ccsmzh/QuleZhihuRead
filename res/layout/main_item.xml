<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mi_rl_quesiontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="8.0dip" >

        <TextView
            android:id="@+id/mi_tv_quesiontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mi_rl_quesiontitle"
        android:background="@color/list_bottom_background_color"
        android:padding="8.0dip" >

        <ImageView
            android:id="@+id/mi_iv_head"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/bg_head" />


        <TextView
            android:id="@+id/mi_tv_answer_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/mi_iv_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/mi_tv_answer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/mi_tv_answer_author"
            android:layout_below="@id/mi_tv_answer_author"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@android:color/darker_gray"
            android:textIsSelectable="false"
            android:textSize="14.0sp" />
    </RelativeLayout>

</RelativeLayout>